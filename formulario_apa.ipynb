        "        self.apartados_text.config(state=tk.DISABLED)\n",
        "\n",
        "    def generar_documento(self):\n",
        "        \"\"\"\n",
        "        Genera el documento Word basado en la información del formulario.\n",
        "        \"\"\"\n",
        "        self.documento = configurar_documento()\n",
        "        # ... (código anterior) ...\n",
        "\n",
        "        print(\"Antes de verificar ruta\") # Imprimir para depurar\n",
        "        # Verifica si se proporcionó una ruta de guardado\n",
        "        ruta_guardado_usuario = self.ruta_guardar_entry.get()  # Obtener la ruta ingresada por el usuario\n",
        "        if ruta_guardado_usuario:\n",
        "            # Si el usuario ingresó una ruta, úsala\n",
        "            ruta_guardado = ruta_guardado_usuario\n",
        "\n",
        "            # Si la ruta no tiene la extensión .docx, agrégala\n",
        "            if not ruta_guardado.lower().endswith(\".docx\"):\n",
        "                ruta_guardado += \".docx\"\n",
        "        else:\n",
        "            # Si no se proporcionó una ruta, usa la ruta por defecto en el escritorio\n",
        "            nombre_archivo = \"documento_apa.docx\"  # Nombre del archivo con la extensión\n",
        "            ruta_escritorio = os.path.join(os.path.expanduser(\"~\"), \"Desktop\")\n",
        "            ruta_guardado = os.path.join(ruta_escritorio, nombre_archivo)\n",
        "            tk.messagebox.showinfo(\"Información\", f\"Se guardará el documento en la ruta por defecto: {ruta_guardado}\")\n",
        "        print(\"Ruta de guardado:\", ruta_guardado) # Imprimir para depurar\n",
        "\n",
        "        # Agregar portada\n",
        "        titulo_portada = self.titulo_portada_entry.get()\n",
        "        autores_portada = self.autores_portada_entry.get()\n",
        "        afiliaciones_portada = self.afiliaciones_portada_entry.get()\n",
        "        fecha_portada = self.fecha_portada_entry.get()\n",
        "        if titulo_portada:\n",
        "            agregar_titulo(self.documento, titulo_portada, nivel=1) # Título de nivel 1\n",
        "        if autores_portada:\n",
        "            agregar_parrafo(self.documento, f\"Autor(es): {autores_portada}\")\n",
        "        if afiliaciones_portada:\n",
        "            agregar_parrafo(self.documento, f\"Afiliación(es): {afiliaciones_portada}\")\n",
        "        if fecha_portada:\n",
        "            agregar_parrafo(self.documento, f\"Fecha: {fecha_portada}\")\n",
        "\n",
        "        # Agregar resumen\n",
        "        resumen_texto = self.resumen_text.get(\"1.0\", tk.END).strip()\n",
        "        palabras_clave = self.palabras_clave_text.get(\"1.0\", tk.END).strip()\n",
        "        if resumen_texto:\n",
        "            agregar_titulo(self.documento, \"Resumen\", nivel=1) # Título de nivel 1\n",
        "            agregar_parrafo(self.documento, resumen_texto)\n",
        "        if palabras_clave:\n",
        "            agregar_parrafo(self.documento, f\"Palabras clave: {palabras_clave}\")\n",
        "\n",
        "        # Agregar introducción\n",
        "        titulo_introduccion = self.titulo_introduccion_entry.get()\n",
        "        texto_introduccion = self.introduccion_text.get(\"1.0\", tk.END).strip()\n",
        "        if titulo_introduccion:\n",
        "            agregar_titulo(self.documento, titulo_introduccion, nivel=1)\n",
        "        if texto_introduccion:\n",
        "            agregar_parrafo(self.documento, texto_introduccion)\n",
        "\n",
        "        # Agregar objetivos\n",
        "        objetivo_general = self.objetivo_general_text.get(\"1.0\", tk.END).strip()\n",
        "        objetivos_especificos = self.objetivos_especificos_text.get(\"1.0\", tk.END).strip()\n",
        "        if objetivo_general:\n",
        "            agregar_titulo(self.documento, \"Objetivo General\", nivel=2)\n",
        "            agregar_parrafo(self.documento, objetivo_general)\n",
        "        if objetivos_especificos:\n",
        "            agregar_titulo(self.documento, \"Objetivos Específicos\", nivel=2)\n",
        "            agregar_parrafo(self.documento, objetivos_especificos)\n",
        "\n",
        "        # Agregar método\n",
        "        titulo_metodo = self.titulo_metodo_entry.get()\n",
        "        texto_metodo = self.metodo_text.get(\"1.0\", tk.END).strip()\n",
        "        if titulo_metodo:\n",
        "            agregar_titulo(self.documento, titulo_metodo, nivel=1)\n",
        "        if texto_metodo:\n",
        "            agregar_parrafo(self.documento, texto_metodo)\n",
        "\n",
        "        # Agregar resultados\n",
        "        titulo_resultados = self.titulo_resultados_entry.get()\n",
        "        texto_resultados = self.resultados_text.get(\"1.0\", tk.END).strip()\n",
        "        if titulo_resultados:\n",
        "            agregar_titulo(self.documento, titulo_resultados, nivel=1)\n",
        "        if texto_resultados:\n",
        "            agregar_parrafo(self.documento, texto_resultados)\n",
        "\n",
        "        # Agregar discusión\n",
        "        titulo_discusion = self.titulo_discusion_entry.get()\n",
        "        texto_discusion = self.discusion_text.get(\"1.0\", tk.END).strip()\n",
        "        if titulo_discusion:\n",
        "            agregar_titulo(self.documento, titulo_discusion, nivel=1)\n",
        "        if texto_discusion:\n",
        "            agregar_parrafo(self.documento, texto_discusion)\n",
        "\n",
        "        # Agregar los apartados de varios textos\n",
        "        if self.apartados_data:\n",
        "            for titulo_apartado, texto_apartado in self.apartados_data:\n",
        "                agregar_titulo(self.documento, titulo_apartado, nivel=2)  # Nivel de título 2 para los apartados\n",
        "                agregar_parrafo(self.documento, texto_apartado)\n",
        "\n",
        "        # Agregar Referencias\n",
        "        referencias_texto = self.referencias_text.get(\"1.0\", tk.END).strip()\n",
        "        if referencias_texto:\n",
        "            agregar_titulo(self.documento, \"Referencias\", nivel=1)\n",
        "            agregar_parrafo(self.documento, referencias_texto)\n",
        "\n",
        "        # Agregar Notas\n",
        "        notas_texto = self.notas_text.get(\"1.0\", tk.END).strip()\n",
        "        if notas_texto:\n",
        "            agregar_titulo(self.documento, \"Notas al Pie de Página o Notas al Final\", nivel=1)\n",
        "            agregar_parrafo(self.documento, notas_texto)\n",
        "\n",
        "        # Agregar tablas\n",
        "        datos_tabla_texto = self.datos_tabla_text.get(\"1.0\", tk.END).strip()\n",
        "        titulo_tabla = self.titulo_tabla_entry.get()\n",
        "        if datos_tabla_texto and titulo_tabla:\n",
        "            try:\n",
        "                # Convertir los datos de la tabla de texto a una lista de listas\n",
        "                filas = datos_tabla_texto.split('\\n')\n",
        "                datos_tabla = [fila.split(',') for fila in filas]\n",
        "                agregar_tabla(self.documento, datos_tabla, titulo_tabla)\n",
        "            except Exception as e:\n",
        "                tk.messagebox.showerror(\"Error\", f\"Error al procesar los datos de la tabla: {e}.  Asegúrese de que los datos estén separados por comas y las filas por saltos de línea.\")\n",
        "                return # Detiene la generación del documento si hay un error con los datos de la tabla\n",
        "        elif titulo_tabla:\n",

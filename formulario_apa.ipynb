        "        self.resizable(True, True)  # Permitir redimensionar la ventana\n",
        "\n",
        "        self.documento = None\n",
        "        self.imagenes = [] # Lista para almacenar las rutas de las imágenes y sus títulos\n",
        "        self.tab_control = ttk.Notebook(self) #Control de pestañas\n",
        "\n",
        "        self.crear_tabs()\n",
        "        self.tab_control.pack(expand=1, fill='both')\n",
        "\n",
        "        # Estilos para los widgets\n",
        "        self.estilo = ttk.Style(self)\n",
        "        self.estilo.configure('TButton', font=('Times New Roman', 12))\n",
        "        self.estilo.configure('TLabel', font=('Times New Roman', 12))\n",
        "        self.estilo.configure('TCheckbutton', font=('Times New Roman', 12))\n",
        "        self.estilo.configure('Header.TLabel', font=('Times New Roman', 14, 'bold'))\n",
        "\n",

        "import docx\n",
        "from docx.shared import Inches, Pt\n",
        "from docx.enum.text import WD_ALIGN_PARAGRAPH\n",
        "from docx.enum.section import WD_ORIENT, WD_SECTION\n",
        "import os  # Importar el módulo os para trabajar con rutas de archivos\n",
        "\n",
        "import tkinter as tk\n",
        "from tkinter import ttk, filedialog, Text, scrolledtext\n",
        "import tkinter.filedialog as fd\n",
        "from PIL import Image, ImageTk\n",
        "from io import BytesIO\n",
        "\n",
        "def configurar_documento():\n",
        "    \"\"\"\n",
        "    Configura las propiedades iniciales del documento Word (tamaño de página, márgenes, etc.) según las normas APA.\n",
        "    \"\"\"\n",
        "    documento = docx.Document()\n",
        "    seccion = documento.sections[0]\n",
        "\n",
        "    # Tamaño de página: Carta (8.5 x 11 pulgadas)\n",
        "    seccion.page_width = Inches(8.5)\n",
        "    seccion.page_height = Inches(11)\n",
        "\n",
        "    # Márgenes: 1 pulgada (2.54 cm) en todos los lados\n",
        "    seccion.left_margin = Inches(1)\n",
        "    seccion.right_margin = Inches(1)\n",
        "    seccion.top_margin = Inches(1)\n",
        "    seccion.bottom_margin = Inches(1)\n",
        "\n",
        "    return documento\n",
        "\n",
        "def agregar_titulo(documento, titulo, nivel=1):\n",
        "    \"\"\"\n",
        "    Agrega un título al documento, formateado según las normas APA.\n",
        "\n",
        "    Args:\n",
        "        documento: El objeto Document de docx.\n",
        "        titulo: El texto del título.\n",
        "        nivel: El nivel del título (1, 2, 3, etc.).\n",
        "    \"\"\"\n",
        "    if nivel == 1:\n",
        "        titulo_formateado = documento.add_heading(titulo, level=1)\n",
        "        titulo_formateado.alignment = WD_ALIGN_PARAGRAPH.CENTER\n",
        "        titulo_formateado.style.font.size = Pt(16)\n",
        "        titulo_formateado.style.font.name = \"Times New Roman\"\n",
        "    elif nivel == 2:\n",
        "        titulo_formateado = documento.add_heading(titulo, level=2)\n",
        "        titulo_formateado.alignment = WD_ALIGN_PARAGRAPH.LEFT\n",
        "        titulo_formateado.style.font.size = Pt(14)\n",
        "        titulo_formateado.style.font.name = \"Times New Roman\"\n",
        "    else:\n",
        "        titulo_formateado = documento.add_heading(titulo, level=nivel)\n",
        "        titulo_formateado.alignment = WD_ALIGN_PARAGRAPH.LEFT\n",
        "        titulo_formateado.style.font.size = Pt(12)  # Tamaño de fuente para títulos de nivel 3+\n",
        "        titulo_formateado.style.font.name = \"Times New Roman\"\n",
        "    titulo_formateado.paragraph_format.space_after = Pt(12)\n",
        "\n",
        "def agregar_parrafo(documento, texto):\n",
        "    \"\"\"\n",
        "    Agrega un párrafo de texto al documento, formateado según las normas APA.\n",
        "\n",
        "    Args:\n",
        "        documento: El objeto Document de docx.\n",
        "        texto: El texto del párrafo.\n",
        "    \"\"\"\n",
        "    parrafo = documento.add_paragraph(texto)\n",
        "    parrafo.alignment = WD_ALIGN_PARAGRAPH.JUSTIFY\n",
        "    parrafo.style.font.size = Pt(12)\n",
        "    parrafo.style.font.name = \"Times New Roman\"\n",
        "    parrafo.paragraph_format.line_spacing = 1.5\n",
        "    parrafo.paragraph_format.space_after = Pt(12)\n",
        "\n",
        "def agregar_imagen(documento, ruta_imagen, titulo, posicion, tamano):\n",
        "    \"\"\"\n",
        "    Agrega una imagen al documento, con título y tamaño especificados, según las normas APA.\n",
        "\n",
        "    Args:\n",
        "        documento: El objeto Document de docx.\n",
        "        ruta_imagen: La ruta al archivo de la imagen.\n",
        "        titulo: El título/nota de la imagen.\n",
        "        posicion: \"Arriba\" o \"Abajo\" para la posición del título.\n",
        "        tamano: \"Pequeño\", \"Mediano\" o \"Grande\".\n",
        "    \"\"\"\n",
        "    try:\n",
        "        img = Image.open(ruta_imagen)\n",
        "        ancho_original, alto_original = img.size\n",
        "    except Exception as e:\n",
        "        print(f\"Error al abrir la imagen {ruta_imagen}: {e}\")\n",
        "        return  # Sale de la función si hay un error con la imagen\n",
        "\n",
        "    # Agregar párrafo para la imagen\n",
        "    parrafo = documento.add_paragraph()  # Se añade el párrafo al documento\n",
        "    parrafo.alignment = WD_ALIGN_PARAGRAPH.CENTER  # Centrar la imagen\n",
        "    run = parrafo.add_run()\n",
        "\n",
        "    if tamano == \"Pequeño\":\n",
        "        ancho_deseado = Inches(3)\n",
        "    elif tamano == \"Mediano\":\n",
        "        ancho_deseado = Inches(5)\n",
        "    elif tamano == \"Grande\":\n",
        "        ancho_deseado = Inches(6)\n",
        "    else:\n",
        "        ancho_deseado = Inches(4)\n",
        "\n",
        "    alto_deseado = ancho_deseado * (alto_original / ancho_original)\n",
        "    run.add_picture(ruta_imagen, width=ancho_deseado, height=alto_deseado)\n",
        "\n",
        "    if posicion == \"Arriba\":\n",
        "        parrafo_titulo = documento.add_paragraph(titulo)\n",
        "        parrafo_titulo.alignment = WD_ALIGN_PARAGRAPH.CENTER\n",
        "        # Insertar el párrafo del título antes del párrafo de la imagen\n",
        "        parrafo._p.addprevious(parrafo_titulo._p)\n",
        "        # Formato del título (cursiva, espacio)\n",
        "        parrafo_titulo.runs[0].italic = True\n",
        "        parrafo_titulo.paragraph_format.space_before = Pt(0)\n",
        "        parrafo.paragraph_format.space_after = Pt(6)\n",
        "\n",
        "    elif posicion == \"Abajo\":\n",
        "        parrafo_titulo = documento.add_paragraph(titulo)\n",
        "        parrafo_titulo.alignment = WD_ALIGN_PARAGRAPH.CENTER\n",
        "        # Formato del título (cursiva, espacio)\n",
        "        parrafo_titulo.runs[0].italic = True\n",
        "        parrafo_titulo.paragraph_format.space_before = Pt(6)\n",
        "        parrafo_titulo.paragraph_format.space_after = Pt(12)\n",
        "def agregar_tabla(documento, datos, titulo):\n",
        "    \"\"\"\n",
        "    Agrega una tabla al documento, formateada según las normas APA.\n",
        "\n",
        "    Args:\n",
        "        documento: El objeto Document de docx.\n",
        "        datos: Una lista de listas, donde cada lista interna representa una fila de la tabla.\n",
        "        titulo: El título de la tabla.\n",
        "    \"\"\"\n",
        "    # Agregar título de la tabla\n",
        "    parrafo_titulo = documento.add_paragraph()\n",
        "    run_titulo = parrafo_titulo.add_run(titulo)\n",
        "    run_titulo.italic = True  # Título en cursiva para tablas también\n",
        "    parrafo_titulo.alignment = WD_ALIGN_PARAGRAPH.LEFT # Alineado a la izquierda para tablas\n",
        "    parrafo_titulo.paragraph_format.space_after = Pt(6)\n",
        "\n",
        "    tabla = documento.add_table(rows=1, cols=len(datos[0]))  # Crear tabla con el número correcto de columnas\n",
        "    tabla.style = 'Table Grid' # Estilo de la tabla\n",
        "\n",
        "    # Agregar encabezados\n",
        "    encabezados = tabla.rows[0].cells\n",
        "    for i, encabezado in enumerate(datos[0]):\n",
        "        encabezados[i].text = str(encabezado)  # Convertir a string para evitar errores de tipo\n",
        "\n",
        "    # Agregar datos\n",
        "    for fila_datos in datos[1:]:\n",
        "        fila = tabla.add_row().cells\n",
        "        for i, dato in enumerate(fila_datos):\n",
        "            fila[i].text = str(dato) # Convertir a string\n",
        "\n",
        "    # Formatear la tabla (centrar contenido, fuente, etc.)\n",
        "    for row in tabla.rows:\n",
        "        for cell in row.cells:\n",
        "            cell.paragraphs[0].alignment = WD_ALIGN_PARAGRAPH.CENTER\n",
        "            cell.paragraphs[0].style.font.size = Pt(12)\n",
        "            cell.paragraphs[0].style.font.name = \"Times New Roman\"\n",
        "    # Espacio después de la tabla\n",
        "    parrafo_despues_tabla = documento.add_paragraph()\n",
        "    parrafo_despues_tabla.paragraph_format.space_after = Pt(12)\n",
        "    # Insertar la tabla directamente después del párrafo del título\n",
        "    parrafo_titulo._element.addnext(tabla._element)\n",
        "\n",
        "def guardar_documento(documento, ruta_guardado):\n",
        "    \"\"\"\n",
        "    Guarda el documento Word en la ruta especificada.\n",
        "\n",
        "    Args:\n",
        "        documento: El objeto Document de docx.\n",
        "        ruta_guardado: La ruta donde se guardará el documento.\n",
        "    \"\"\"\n",
        "    try:\n",
        "        documento.save(ruta_guardado)\n",
        "        return True, f\"Documento guardado exitosamente en: {ruta_guardado}\"\n",
        "    except Exception as e:\n",
        "        return False, f\"Error al guardar el documento: {e}\"\n",
        "\n",
        "class FormularioAPA(tk.Tk):\n",
